{
  "expo": {
    "name": "PilatesSalon Yönetimi",
    "slug": "studyo_management",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "pilatessalon",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1D23"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pilatessalon.management"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1D23"
      },
      "package": "com.pilatessalon.management",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Pilates Salon Yönetimi",
      "shortName": "Pilates Yönetim",
      "description": "Modern ve kullanıcı dostu pilates stüdyo yönetim uygulaması",
      "themeColor": "#B8FF3C",
      "backgroundColor": "#0A0A0B",
      "bundler": "metro",
      "output": "static",
      "lang": "tr"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Uygulama profil fotoğrafı yüklemek için fotoğraf kütüphanenize erişim istiyor."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Uygulama stüdyonuzun konumunu tespit etmek için konum bilgilerine erişim istiyor."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
